{
    "global": {
        "ignore": [
            "node_modules/**",
            "bower_components/**",
            "jspm_packages/**",
            ".npm/**",
            "vendor/**",

            "lib-cov/**",
            "coverage/**",
            ".nyc_output/**",

            "**/*.min.js",
            "**/*.min.css"
        ]
    },

    "jslint": {
        "files": [
            "**/*.js",
            "**/*.json",
            "**/.*.json",
            "**/*.yaml",
            "**/.*.yaml",
            "**/*.yml",
            "**/.*.yml"
        ],
        "ignore": [],
        "rcFile": ".jslintrc"
    },

    "eslint": {
        "files": [
            "**/*.js"
        ],
        "ignore": [],
        "rcFile": ".eslintrc.json"
    },

    "csslint": {
        "files": [
            "**/*.css"
        ],
        "ignore": [],
        "rcFile": ".csslintrc"
    },

    "htmlhint": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [],
        "rcFile": ".htmlhintrc"
    },

    "w3cjs": {
        "files": [
            "**/*.html",
            "**/*.htm"
        ],
        "ignore": [],
        "rcFile": null
    },

    "markdownlint": {
        "files": [
            "**/*.markdown",
            "**/*.mdown",
            "**/*.mkdn",
            "**/*.md",
            "**/*.mkd",
            "**/*.mdwn",
            "**/*.mdtxt",
            "**/*.mdtext",
            "**/*.rmd"
        ],
        "ignore": [],
        "rcFile": ".markdownlint.json"
    },

    "remark-lint": {
        "files": [
            "**/*.markdown",
            "**/*.mdown",
            "**/*.mkdn",
            "**/*.md",
            "**/*.mkd",
            "**/*.mdwn",
            "**/*.mdtxt",
            "**/*.mdtext",
            "**/*.rmd"
        ],
        "ignore": [],
        "rcFile": ".remarkrc"
    }
}
