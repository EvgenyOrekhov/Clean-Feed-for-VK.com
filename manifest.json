{
    "name": "Чистые Новости для VK.com",
    "version": "1.9.2",
    "manifest_version": 2,
    "minimum_chrome_version": "22.0.1229.79",
    "description": "Очищает захламлённые новости ВКонтакте от отстойных репостов ваших друзей",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "page_action": {
        "default_icon": "icon16.png",
        "default_title": "Настройки",
        "default_popup": "options.html"
    },
    "permissions": [
        "tabs",
        "*://vk.com/feed",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    }
}
