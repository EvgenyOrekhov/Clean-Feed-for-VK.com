{
    "name": "Чистые Новости для VK.com",
    "version": "1.11.1",
    "manifest_version": 2,
    "minimum_chrome_version": "26",
    "description": "Очищает захламлённые новости ВКонтакте от отстойных репостов ваших друзей",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "page_action": {
        "default_icon": "icon16.png",
        "default_title": "Настройки",
        "default_popup": "popup.html"
    },
    "permissions": [
        "*://vk.com/*",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://vk.com/*"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_end"
        }
    ]
}
