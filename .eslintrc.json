{
  "extends": ["hardcore", "hardcore/fp", "prettier", "prettier/unicorn"],

  "parserOptions": {
    "sourceType": "module"
  },

  "globals": {
    "chrome": "readonly",
    "document": "readonly"
  },

  "rules": {
    "camelcase": "off"
  },

  "overrides": [
    {
      "files": ["src/background.js"],

      "parserOptions": {
        "sourceType": "script"
      },

      "rules": {
        "unicorn/consistent-function-scoping": "off"
      }
    }
  ],

  "ignorePatterns": ["dist/", "src/content-script.js"]
}
